<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginRight="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/section_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:layout_marginRight="@dimen/spacing_small"/>

                <TextView
                    android:id="@+id/section_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:layout_marginBottom="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:layout_marginEnd="@dimen/spacing_normal"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginStart="@dimen/spacing_normal"
                    style="@style/Theme.Esnmobilit.CardViewTitle"/>

                <TextView
                    style="@style/Theme.Esnmobilit.CardViewSubtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_fragment_about"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <org.esn.mobilit.widgets.InfoCard
            android:id="@+id/first_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </org.esn.mobilit.widgets.InfoCard>

        <org.esn.mobilit.widgets.InfoCard
            android:id="@+id/second_info_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </org.esn.mobilit.widgets.InfoCard>

    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/phone_relative"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_small"
    android:layout_marginBottom="@dimen/spacing_normal"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/info_icon"
        android:layout_width="@dimen/cardView_imageViewAbout_width"
        android:layout_height="@dimen/cardView_imageViewAbout_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        style="@style/Theme.Esnmobilit.CardViewImageViewAbout"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="@style/Theme.Esnmobilit.CardViewTextViewAbout"/>
</RelativeLayout>